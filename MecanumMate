while(gamepad2.dpad_left)
                {
                  Capstone.setPower(0.5);
                  if(!gamepad2.dpad_left)
                  {    Capstone.setPower(0);
                      break;}
                }
                while(gamepad2.dpad_right)
                    {
                        Capstone.setPower(-0.5);
                        if(!gamepad2.dpad_right)
                        {    Capstone.setPower(0);
                            break;}
                    }
